<div class="container">
    <h1 style="margin-top:5%; text-align:center;"> 게시판 리스트 </h1>
    
    <div style="margin-top:5%;">
        <% @print.each do |p| %> 
          <div class="well">
             <p style="margin-left:3%;"> 제목 : <%= p.title_db %>  </p>
             <p style="margin-left:3%;"> 내용 : <%= p.content_db %> </p>
             <p style="text-align:right; margin-right:1%;">
	       <a href="/home/update_view/<%= p.id %>">[수정]</a>
               <a href="/home/destroy/<%= p.id %>"> [삭제] </a>
             </p>
            <p style="margin-left:3%;">내용의 글자수 <%=p.content.length%> 공백제외 <%=(p.content.length)-(p.content.count" ")%>
        단어수 <%=(p.content.count" ")+1 %> 공백 <%=p.content.count" " %></p>
     

            
               <form action="/home/reply_write" method="post">
              <div class="form-group">
            <input type="hidden" class="form-control" value ="<%= p.id %>" name = "post_number">
          <textarea class="form-control" rows="5" name="reply_content" 
          placeholder="댓글을 입력하세요." style="resize:none;"></textarea>
         <center> <button type="submit" class="btn btn-default">Submit</button> </center>
       
  </form>
   
   <% p.replies.each do |r| %>
       <%=r.reply_write %>
          <a href="/home/reply_update_view/<%= r.id %>">[수정]</a>
          <a href="/home/reply_destroy/<%= r.id %>"> [삭제] </a>
       <% end %>
   
   
             
             
             
          </div><!-- well -->
          
                 <% end %>
    <a href="/home/index"><h1 style="text-align:center;">[다시 돌아가기]</h1></a>
   </div><!--div style --> 
</div> <!-- container -->
